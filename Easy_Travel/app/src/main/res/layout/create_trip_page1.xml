<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="Tworzenie wycieczki"/>


    <EditText
        android:id="@+id/nameTrip_edttxt"
        android:layout_below="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/baseline_airport_shuttle_24"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:hint="Podaj nazwę wycieczki"
         />


    <EditText
        android:id="@+id/describeTrip_edttxt"
        android:layout_below="@+id/nameTrip_edttxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/baseline_mode_comment_24"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:hint="Podaj opis wycieczki"
         />


    <TextView
        android:id="@+id/startDate_txt"
        android:layout_below="@+id/describeTrip_edttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Data i godzina rozpoczęcia wycieczki"
         />

    <EditText
        android:id="@+id/date_picker_actions"
        android:layout_below="@+id/startDate_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:hint="Data i Godzina"
         />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn1"
        android:layout_below="@+id/date_picker_actions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="#00D5FF"
        android:textColor="@color/black"
        android:elevation="300dp"
        android:text="Przejdź dalej"
         />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:layoutDescription="@xml/activity_register_scene"
    tools:context=".ViewModel.RegisterActivity">


    <!-- add the ability to add date of birth with scroll-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="30sp"
            android:text="Utwórz konto Easytravel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="32" />

        <EditText
            android:id="@+id/name_edttxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/textView3"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Podaj imię"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/cardview_dark_background"
            android:textColorHighlight="#FFFFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="171dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <EditText
            android:id="@+id/surname_edttxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/textView3"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Podaj nazwisko"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/cardview_dark_background"
            android:textColorHighlight="#FFFFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="251dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="32" />

        <Button
            android:id="@+id/next_btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dalej" />

    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>
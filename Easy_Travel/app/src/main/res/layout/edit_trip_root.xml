<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/edit_trip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zmien nazwe/opis" />

        <Button
            android:id="@+id/edit_trip_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edytuj punkty wycieczki" />

        <Button
            android:id="@+id/edit_trip_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zarzadzaj uczestnikami" />

        <Button
            android:id="@+id/edit_trip_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powróć" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
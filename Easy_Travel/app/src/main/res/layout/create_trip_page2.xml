<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:padding="40dp"
        android:text="Tworzenie wycieczki"
        android:textAlignment="center"
        style="@style/TEXT"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tripPoint_txt"
        android:layout_below="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:textSize="15sp"
        style="@style/TEXT"
        android:text="Punkty Wycieczki"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tripPoint_list"
        android:layout_below="@+id/tripPoint_txt"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tripPoint_list"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addTripPoint_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="00dp"
        android:backgroundTint="#00D5FF"
        android:textColor="@color/black"
        android:elevation="300dp"
        android:text="punkt +"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5" />


        <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#55FF7A"
        android:textColor="@color/black"
        android:elevation="300dp"
        android:text="Dalej"/>

    </LinearLayout>


</RelativeLayout>

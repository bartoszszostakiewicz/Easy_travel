<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="top|center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp">
    <ImageView
        android:id="@+id/logOutButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="00dp"
        android:layout_marginStart="00dp"
        android:layout_marginEnd="00dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_logout_24"/>

        <Space
            android:layout_width="270dp"
            android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/create_trip_button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_settings_24" />
    </LinearLayout>
    <TextView
        android:id="@+id/hello_txt"
        android:layout_below="@+id/lin2"
        android:layout_width="414dp"
        android:layout_height="44dp"
        android:text="Witamy!"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        style="@style/TEXT"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tripList"
        android:layout_below="@+id/hello_txt"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_edittext"
        android:layout_height="530dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:ignore="DuplicateIds" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_trip"
            android:layout_below="@+id/tripList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#55FF7A"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Stwórz wycieczkę"
            android:textColor="@color/black" />





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/theme_textView"
        android:layout_width="414dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="00dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#DD8348"
        android:text="Zgubiłeś się?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/theme_textView">


        <com.google.android.material.button.MaterialButton
        android:id="@+id/organizer_chat_button"
        android:layout_width="165dp"
            android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00D5FF"
        android:textColor="@color/black"
        app:elevation="5dp"
        android:text="Czat z organizatorem" ></com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <TextView
        android:id="@+id/information_textView"
        android:layout_width="354dp"
        android:layout_height="380dp"
        android:layout_marginTop="20dp"
        android:text="W razie zagrożenia życia lub zdrowia, należy natychmiast skontaktować się z odpowiednimi służbami, takimi jak policją lub pogotowiem ratunkowym (nr. 112).\n\nKolejnym krokiem jest zachowanie spokoju i zastosowanie się do instrukcji służb, które mogą obejmować ucieczkę, ukrycie się w bezpiecznym miejscu lub pozostanie w miejscu i czekanie na pomoc.\n\nW każdym przypadku, ważne jest, aby pamiętać o swoim bezpieczeństwie i działać szybko i skutecznie, by zminimalizować ryzyko.\n\nJeśli masz jakiekolwiek wątpliwości co do tego, jak postępować, skontaktuj się z odpowiednimi służbami, które pomogą ci zachować bezpieczeństwo."
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00D5FF"
        android:textColor="@color/black"
        android:text="Powróć"
        app:elevation="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>
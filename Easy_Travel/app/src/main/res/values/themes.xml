<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Easy_travel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#00D5FF</item>  <!--BUTTONY-->
        <item name="colorPrimaryVariant">@color/black</item><!--PASEK GÃ“RNY-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Easy_travel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Easy_travel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Easy_travel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Light mode -->
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">@color/white</item>
        <item name="android:color">#717171</item>
    </style>

    <!-- Texts background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- button background if light mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LINE">
        <item name="android:fillColor">#000000</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:tint">#000000</item>
        <item name="android:background">#000000</item>
    </style>



</resources>